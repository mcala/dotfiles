{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "cleanupPeriodDays": 10,
    "alwaysThinkingEnabled": true,
    "statusLine": {
        "type": "command",
        "command": "bash ~/.claude/statusline.sh"
    },
    "sandbox": {
        "enabled": true,
        "allowUnsandboxedCommands": false,
        "autoAllowBashIfSandboxed": true,
        "excludedCommands": [
            "docker",
            "podman"
        ],
        "network": {
            "allowUnixSockets": [],
            "allowAllUnixSockets": false,
            "allowLocalBinding": true,
            "allowedDomains": []
        }
    },
    "permissions": {
        "allow": [
            "Read",
            "Bash(python *)",
            "Bash(pytest *)",
            "Bash(ruff check *)",
            "Bash(just --help)",
            "Bash(just install)",
            "Bash(just sync)",
            "Bash(ty check *)",
            "Bash(pyright *)",
            "Bash(ruff format *)",
            "Bash(uv *)",
            "Bash(git log *)",
            "Bash(git diff *)",
            "Bash(git status)",
            "Bash(git branch *)",
            "Bash(ls *)",
            "Bash(cat *)",
            "Bash(find *)",
            "Bash(grep *)",
            "Bash(head *)",
            "Bash(tail *)",
            "Bash(wc *)"
        ],
        "deny": [
            "Read(./.env)",
            "Read(./.env.*)",
            "Read(./secrets/**)",
            "Read(~/.aws/**)",
            "Bash(rm -rf *)",
            "Bash(curl *)",
            "Bash(wget *)"
        ]
    },
    "enabledPlugins": {
        "pyright-lsp@claude-plugins-official": true,
        "claude-md-management@claude-plugins-official": true
    }
}
