// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
{
  "inline_completions": {
    "disabled_globs": [".env", "test_hello.py", "hello.py"]
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "vim_mode": true,
  "base_keymap": "VSCode",
  "theme": {
    "mode": "system",
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine Moon"
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_weight": 400,
  "buffer_font_features": {
    "zero": true
  },
  "indent_guides": {
    "enabled": true
  },
  "show_whitespaces": "selection",
  "show_wrap_guides": true,
  "wrap_guides": [80],
  "current_line_highlight": "all",
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  "autosave": "on_focus_change",
  "format_on_save": "on",
  "active_pane_magnification": 1.5,
  "languages": {
    "Python": {
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 90,
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    }
  },
  "terminal": {
    "dock": "bottom",
    "font_size": 16,
    "font_family": "JetBrainsMono Nerd Font",
    "theme": {
      "mode": "dark",
      "light": "Rosé Pine Dawn",
      "dark": "Rosé Pine Moon"
    }
  },
  "project_panel": {
    "dock": "right",
    "button": true
  },
  "outline_panel": {
    "dock": "right",
    "button": true
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "telemetry": {
    "diagnostics": true,
    "metrics": false
  }
}
